import React from 'react';
import { Platform } from 'react-native';
import { NativeTabs, Icon, Label } from 'expo-router/unstable-native-tabs';
import { Stack } from 'expo-router';
import FloatingTabBar, { TabBarItem } from '@/components/FloatingTabBar';

export default function TabLayout() {
  // Define the tabs configuration
  const tabs: TabBarItem[] = [
    {
      name: '(home)',
      route: '/(tabs)/(home)/',
      icon: 'house.fill',
      label: 'Home',
    },
    {
      name: 'live-location',
      route: '/(tabs)/live-location',
      icon: 'location.fill',
      label: 'Live Location',
    },
    {
      name: 'panic',
      route: '/(tabs)/panic',
      icon: 'bell.badge.fill',
      label: 'Panic',
    },
    {
      name: 'fake-screen',
      route: '/(tabs)/fake-screen',
      icon: 'iphone',
      label: 'Fake Screen',
    },
    {
      name: 'sos',
      route: '/(tabs)/sos',
      icon: 'shield.fill',
      label: 'SOS',
    },
    {
      name: 'recording',
      route: '/(tabs)/recording',
      icon: 'video.fill',
      label: 'Recording',
    },
  ];

  // Use NativeTabs for iOS, custom FloatingTabBar for Android and Web
  if (Platform.OS === 'ios') {
    return (
      <NativeTabs>
        <NativeTabs.Trigger name="(home)">
          <Icon sf="house.fill" drawable="ic_home" />
          <Label>Home</Label>
        </NativeTabs.Trigger>
        <NativeTabs.Trigger name="live-location">
          <Icon sf="location.fill" drawable="ic_location" />
          <Label>Live Location</Label>
        </NativeTabs.Trigger>
        <NativeTabs.Trigger name="panic">
          <Icon sf="bell.badge.fill" drawable="ic_panic" />
          <Label>Panic</Label>
        </NativeTabs.Trigger>
        <NativeTabs.Trigger name="fake-screen">
          <Icon sf="iphone" drawable="ic_fake" />
          <Label>Fake Screen</Label>
        </NativeTabs.Trigger>
        <NativeTabs.Trigger name="sos">
          <Icon sf="shield.fill" drawable="ic_sos" />
          <Label>SOS</Label>
        </NativeTabs.Trigger>
        <NativeTabs.Trigger name="recording">
          <Icon sf="video.fill" drawable="ic_recording" />
          <Label>Recording</Label>
        </NativeTabs.Trigger>
      </NativeTabs>
    );
  }

  // For Android and Web, use Stack navigation with custom floating tab bar
  return (
    <>
      <Stack
        screenOptions={{
          headerShown: false,
          animation: 'none', // Remove fade animation to prevent black screen flash
        }}
      >
        <Stack.Screen name="(home)" />
        <Stack.Screen name="live-location" />
        <Stack.Screen name="panic" />
        <Stack.Screen name="fake-screen" />
        <Stack.Screen name="sos" />
        <Stack.Screen name="recording" />
      </Stack>
      <FloatingTabBar tabs={tabs} containerWidth={360} />
    </>
  );
}
